@model AspNetCoreIdentityHospitalAutomationApp.Web.ViewModels.DoctorViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Doctor/_DoctorLayout.cshtml";
}

<h1>Hoş Geldiniz Dr. @User.Identity!.Name</h1>

<div class="row">
    <div class="col-sm-3">
        <img style="width:100%; height:100%" src="@Model.Picture" />
    </div>
    <div class="col-sm-9">
        <table class="table table-bordered table-striped">
            <tr>
                <th>Kullanıcı ismi</th>
                <td>@Model.UserName</td>
            </tr>
            <tr>
                <th>E-Posta</th>
                <td>@Model.Email</td>
            </tr>
            <tr>
                <th>Telefon Numarası</th>
                <td>@Model.PhoneNumber</td>
            </tr>
            <tr>
                <th>Branş</th>
                <td>@Model.Branch.ToString().Replace("_"," ")</td>
            </tr>
            <tr>
                <th>Şehir</th>
                <td>
                    @if (!String.IsNullOrEmpty(Model.City))
                    {
                        @Model.City
                    }
                    else
                    {
                        <span>Belirtilmemiş</span>
                    }
                </td>
            </tr>
            <tr>
                <th>Doğum Tarihi</th>
                <td> @Model.BirthDay.ToShortDateString()</td>
            </tr>
            <tr>
                <th>Cinsiyet</th>
                <td>@Model.Gender</td>
            </tr>
        </table>
    </div>
</div>