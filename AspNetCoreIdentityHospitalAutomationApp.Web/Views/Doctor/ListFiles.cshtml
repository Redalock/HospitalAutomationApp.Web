@{
    ViewBag.Title = "List Files";
}

<h2>@ViewBag.Title</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Dosya Adı</th>
            <th>İndir</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var file in Model)
        {
            <tr>
                <td>@file |</td>
                <br />
                <td>
                    <a asp-action="DownloadFile" asp-route-fileName="@file" class="btn btn-primary">Yükle</a>
                </td>
                <td>
                    <form asp-action="DeleteFile" method="post">
                        <input type="hidden" name="fileName" value="@file" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
