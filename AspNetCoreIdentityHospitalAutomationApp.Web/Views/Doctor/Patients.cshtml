@model List<AppUser>

@{
    ViewData["Title"] = "Patients";

}

<h3>Hastalar</h3>
<hr />

<table class="table table-bordered table-striped">
    <tr>
        <td>Hasta Adı</td>
        <td>Email</td>
        <td>Telefon</td>
        <td>Randevu Durumu</td>
        
        

    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td coldspan="3">Hiç bir hasta yoktur.</td>
        </tr>
    }
    else
    {
        @foreach (var item in Model)
        {
            <tr>

                <td>@item.UserName</td>
                <td>@item.Email</td>
                <td>@item.PhoneNumber</td>

                <td><a class="btn btn-success" asp-controller="Calendar" asp-action="Index">Randevu Düzenle</a></td>
                <td><a class="btn btn-success" asp-controller="Calendar" asp-action="Index">Randevu İptal</a></td>
            </tr>
        }
    }
</table>

