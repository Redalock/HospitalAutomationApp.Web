@model IEnumerable<AspNetCoreIdentityHospitalAutomationApp.Web.ViewModels.MedicineViewModel>

@{
    ViewData["Title"] = "ListMedicine";
    Layout = "~/Views/Member/_MemberLayout.cshtml";
}

<h1>Mevcut İlaç Listesi</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MedName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MedName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
           
        </tr>
}
    </tbody>
</table>

<a asp-controller="Member" asp-action="PatientHistory" class="btn btn-success">Reçetelerim</a>
